<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Latest compiled and minified CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="http://mensfeld.pl/bootstrap-calculator/assets/stylesheets/bootstrap-responsive.min.css" />

    <script src="~/Content/jquery-3.2.0.min.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>
    <title>Calculator</title>
    <style>
    


    </style>
</head>
<body>

    @using (Html.BeginForm("LogOff", "Login", FormMethod.Post, new { id = "logOffForm" }))
    {
        @Html.AntiForgeryToken()
    }

    <nav class="navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"> 
                        @{
                            if (Session["username"] == null)
                            { 
                            @:Guest 
                            }
                            else
                            {
                            @Session["username"].ToString().ToUpper()
                            }
                            
                        }</a>
            </div>
            @if (Request.IsAuthenticated)
            {
                <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="javascript:$('#logOffForm').submit()"><span class="glyphicon glyphicon-log-out"></span>Log Out</a></li>

                </ul>
                    </div>
            }
        </div>
    </nav>
    <div class="container center" style="margin-top:50px">
        @RenderBody()
    </div>

</body>
</html>
